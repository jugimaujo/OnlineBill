@model OnlineBill.Domain.Models.CheckingAccount

@{
    ViewData["Title"] = "Remover Conta Corrente";
}

<h1>Remover</h1>

<h3>Tem certeza que deseja remover essa conta corrente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a asp-action="Index"><input type="button" value="Cancelar" class="btn btn-dark" /></a>
    </form>
</div>
