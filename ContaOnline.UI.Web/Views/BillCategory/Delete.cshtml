@model OnlineBill.Domain.Models.BillCategory

@{
    ViewData["Title"] = "Remover";
}

<h1>Remover</h1>

<h3>Tem certeza que quer remover essa categoria de conta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a asp-action="Index"><input type="button" value="Cancelar" class="btn btn-dark" /></a>
    </form>
</div>
