@model OnlineBill.UI.Web.Models.ContactViewModel

@{
    ViewData["Title"] = "Remover";
}

<h1>Remover</h1>

<h3>Tem certeza que quer remover esse contato?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Telefone principal
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrimaryTelephoneNumber)
        </dd>
        <dt class = "col-sm-2">
            Telefone secundário
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecondaryTelephoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        @if (Model.Type == OnlineBill.Domain.Models.JuristicNaturalPerson.JuristicPerson)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CNPJ)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CNPJ)
            </dd>
        }
        else if (Model.Type == OnlineBill.Domain.Models.JuristicNaturalPerson.NaturalPerson)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CPF)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CPF)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RG)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RG)
            </dd>
            <dt class = "col-sm-2">
                Data de nascimento
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Confirmar" class="btn btn-danger" /> |
        <a asp-action="Index"><input type="button" value="Cancelar" class="btn btn-dark" /></a>
    </form>
</div>
